<UserControl x:Class="DZ_Update_ServerFileManager.Views.Controls.UCDateGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DZ_Update_ServerFileManager.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Grid.Row="1" Margin="0,10,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid  x:Name="dataGrid" ItemsSource="{Binding UserTableData}" AutoGenerateColumns="False" CanUserAddRows="False" 
                FontSize="15"   CanUserSortColumns="False" SelectedItem="{Binding SelecedItem}">
        </DataGrid>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Command="{Binding AddNewItemCommand}" Margin="0,3,0,3" Width="80">添加</Button>
            <Button Command="{Binding DeleteItemCommand}"  Margin="10,3,0,3" Width="80">删除</Button>

        </StackPanel>
    </Grid>
</UserControl>
