<Window x:Class="DZ_Update_ServerFileManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DZ_Update_ServerFileManager" xmlns:controls="clr-namespace:DZ_Update_ServerFileManager.Views.Controls"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="600" Width="850">
    <Window.Resources>
    </Window.Resources>

    <Grid Margin="20,0,20,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="150"></RowDefinition>
            <RowDefinition Height="10*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel VerticalAlignment="Center">
            <TextBlock>文件发布目录</TextBlock>
            <StackPanel Orientation="Horizontal" Height="26">
                <TextBox Text="{Binding SelectedPathRecord.PublishPath}" Width="500" FontSize="15" IsReadOnly="True"></TextBox>
                <Button  Command="{Binding OpenHttpFileDirCommand}">......</Button>
            </StackPanel>
        </StackPanel>

        <Grid  Grid.Row="1" Margin="0,20,0,20" IsEnabled="{Binding EnableGeneratePanel}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="10*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="10*"></RowDefinition>
                <RowDefinition Height="10*"></RowDefinition>
                <RowDefinition Height="10*"></RowDefinition>
            </Grid.RowDefinitions>


            <TextBlock FontSize="15"  VerticalAlignment="Center" HorizontalAlignment="Right">版本号：</TextBlock>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Height="26">
                <TextBox Text="{Binding VersionA}"  HorizontalAlignment="Left" Height="26" Width="40" FontSize="15"></TextBox>
                <TextBlock Text=" - " FontSize="15" FontWeight="Bold" VerticalAlignment="Center"></TextBlock>
                <TextBox Text="{Binding VersionB}"   HorizontalAlignment="Left" Height="26" Width="40" FontSize="15"></TextBox>
                <TextBlock Text=" - " FontSize="15" FontWeight="Bold" VerticalAlignment="Center"></TextBlock>
                <TextBox Text="{Binding VersionC}"   HorizontalAlignment="Left" Height="26" Width="40" FontSize="15"></TextBox>
                <TextBlock Text=" - " FontSize="15" FontWeight="Bold" VerticalAlignment="Center"></TextBlock>
                <TextBox Text="{Binding VersionD}"   HorizontalAlignment="Left" Height="26" Width="40" FontSize="15"></TextBox>

                <CheckBox IsChecked="{Binding FoceToUpdate}" VerticalAlignment="Center" Margin="50,0,0,0" FontSize="15" >强制更新</CheckBox>

                <CheckBox IsChecked="{Binding FirstVersionFile}" VerticalAlignment="Center" Margin="50,0,0,0" FontSize="15" >原始版本（不生成zip文件）</CheckBox>

            </StackPanel>


            <TextBlock Grid.Row="2" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right">待更新文件路径：</TextBlock>
            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Height="26" VerticalAlignment="Center">
                <TextBox Text="{Binding SelectedPathRecord.SourceFileDir}" Width="450" FontSize="15"></TextBox>
                <Button  Command="{Binding OpenSourceFileDirCommand}">......</Button>

                <Button Command="{Binding GenerateUpdateFileCommand}" Margin="20,0,0,0">生成版本文件</Button>
            </StackPanel>

            <TextBlock Grid.Row="1" Text="忽略列表文件：" FontSize="15" HorizontalAlignment="Right" VerticalAlignment="Center"></TextBlock>
            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBox Text="{Binding SelectedPathRecord.IgnoreFile}" Width="450" FontSize="15"></TextBox>
                <Button  Command="{Binding OpenFilterFileCommand}">......</Button>
                <TextBlock Text="(按行读取，按文件名筛选)" FontSize="15" Margin="0,0,0,0"></TextBlock>
            </StackPanel>

        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*"></ColumnDefinition>
                <ColumnDefinition Width="20*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="10*"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.RowSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*"></RowDefinition>
                    <RowDefinition Height="10*"></RowDefinition>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <controls:UCDateGrid x:Name="userTable"></controls:UCDateGrid>
                </Grid>

                <Grid Grid.Row="1" Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <controls:UCDateGrid x:Name="clientTypeTable"></controls:UCDateGrid>

                </Grid>

            </Grid>

            <controls:UCDateGrid x:Name="updateInfoTable" Grid.Column="1" Grid.RowSpan="2"></controls:UCDateGrid>
        </Grid>
    </Grid>
</Window>
